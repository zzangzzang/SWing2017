<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_result"
    android:background="@drawable/mainback2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/left_arrow"
            android:background="@drawable/round_button"
            android:id="@+id/left_arrow"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.37">
                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/videoView"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showVideo"
                    android:text="프로영상 보기"
                    android:background="#55000080"
                    android:textColor="@color/white"
                    />
            </FrameLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/textleft"
                    android:layout_marginRight="14dp"
                    android:layout_gravity="center"
                    android:textSize="40dp"
                    android:textColor="#A9B7B7"
                    android:text="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@drawable/foot_left"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@drawable/foot_right"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/textright"
                    android:layout_marginLeft="14dp"
                    android:layout_gravity="center"
                    android:textSize="40dp"
                    android:textColor="#A9B7B7"
                    android:text="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="프로선수와"
                    android:textColor="#ffffff"
                    android:paddingLeft="20dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/synctext"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:text="75%"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="일치합니다"
                    android:textColor="#ffffff"
                    android:paddingRight="20dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#22FFFFFF"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp">

                <view
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    class="im.dacer.androidcharts.LineView"
                    android:id="@+id/line_view"
                    android:layout_margin="10dp"/>


                <TextView
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="왼발"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#22FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <view
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    class="im.dacer.androidcharts.LineView"
                    android:id="@+id/line_view2"
                    android:layout_margin="10dp"/>


                <TextView
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="오른발"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/right_arrow"
            android:background="@drawable/round_button"
            android:id="@+id/right_arrow"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:id="@+id/video_layout"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#AA000000"
        android:layout_gravity="center">

        <VideoView
            android:layout_width="500dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/provideoView"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/textleft2"
                android:layout_marginRight="14dp"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textColor="#A9B7B7"
                android:text="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/foot_left"
                android:layout_width="70dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/foot_right"
                android:layout_width="70dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textright2"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textColor="#A9B7B7"
                android:text="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>